# .env
# application
APP_ENV=production
APP_KEY=base64:YourAppKeyHere=
APP_URL=http://your-app-url.test
# oli-CMS 环境变量配置
# 通用
APP_NAME=OliCMS
APP_ENV=development
APP_DEBUG=false
APP_KEY=base64:YourAppKeyHere=
APP_URL=http://localhost

# 数据库
DB_CONNECTION=pgsql
DB_HOST=database
DB_PORT=5432
DB_DATABASE=your_db_name
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# 邮件
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_mail_user
MAIL_PASSWORD=your_mail_password
MAIL_FROM_ADDRESS=your_mail_from@example.com
MAIL_FROM_NAME="OliCMS"
MAIL_ENCRYPTION=tls

# 其他
TENANT_VALIDATION_API_URL=http://backend:8000/api/tenant
